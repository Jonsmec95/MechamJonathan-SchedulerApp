<AnchorPane prefHeight="600.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.AddCustomerController">
   <children>
      <VBox layoutX="460.0" layoutY="119.0" prefHeight="315.0" prefWidth="190.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerNameLabel" text="Customer Name: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerAddressLabel" text="Address: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerPostalLabel" alignment="CENTER" text="Postal Code: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerPhoneLabel" text="Phone Number: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerIDLabel" text="Customer ID: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerCountryLabel" text="Country: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <Label fx:id="customerFLDLabel" text="First Level Division: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="650.0" layoutY="119.0" prefHeight="315.0" prefWidth="190.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <TextField fx:id="customerNameTF" promptText="Customer Name" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <TextField fx:id="customerAddressTF" promptText="Address" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <TextField fx:id="customerPostalTF" promptText="Postal Code" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <TextField fx:id="customerPhoneTF" promptText="Phone Number" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <TextField fx:id="customerIDTF" promptText="Customer ID" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <ComboBox fx:id="countryCB" onAction="#countryCBChanged" prefHeight="27.0" prefWidth="164.0" promptText="Country" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="190.0">
               <children>
                  <ComboBox fx:id="firstLevelDivCB" prefHeight="27.0" prefWidth="163.0" promptText="First Level Division" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label fx:id="addCustomerTitleLabel" alignment="CENTER" layoutX="536.0" layoutY="14.0" prefHeight="52.0" prefWidth="228.0" text="Add Customer" underline="true">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="536.0" layoutY="495.0" prefHeight="52.0" prefWidth="228.0" spacing="10.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonPushed" prefHeight="40.0" prefWidth="100.0" text="Save" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonPushed" prefHeight="40.0" prefWidth="100.0" text="Cancel" />
         </children>
      </HBox>
   </children>
